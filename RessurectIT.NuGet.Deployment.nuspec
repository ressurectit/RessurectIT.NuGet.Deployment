<?xml version="1.0" encoding="utf-8"?>

<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>RessurectIT.NuGet.Deployment</id>
        <version>2.1.4</version>
        <authors>kukjevov</authors>
        <owners>RessurectIT</owners>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>Package used for easier and automatic deployment of nuget packages to NuGet repository</description>
        <releaseNotes>
            v2.1.4
                - fixed path to NuGet.CommandLine package
            v2.1.3
                - updated NuGet.CommandLine dependency version
            v2.1.2
                - added support for multiple nuget folders, moved logic from proj file into powershell script
            v2.1.1
                - added support for multiple nuget folders, .net core 2+ changes
            v2.1.0
                - Removed requirement for server url and added support for url from environment variable or nuget.config
            v2.0.0
                - working for multiplatform projects, supports MsBuild 15+
        </releaseNotes>
        <copyright>RessurectIT 2017. All rights reserved.</copyright>
        <tags>NuGet Deployment</tags>

        <dependencies>
            <dependency id="NuGet.CommandLine" version="4.7.1" />
        </dependencies>
    </metadata>

    <files>
        <file src="Build\RessurectIT.NuGet.Deployment.targets" target="build" />
